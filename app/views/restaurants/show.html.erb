<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1><%= @restaurant.name %></h1>
      <ul>
        <li><%= @restaurant.address %></li>
        <li><%= @restaurant.category %></li>
        <li><%= @restaurant.phone_number %></li>
        <li><% @reviews.each do |review| %>
          <p><%= review.content %></p>
          <p><%= review.rating %></p>
          <% end %>
        </li>
        <li><%= link_to "Add New review", new_restaurant_review_path(@restaurant) , class: "btn btn-primary"%></li>
        <li><%= link_to "Return to index", restaurants_path(@restaurant), class: "btn btn-primary"%></li>
      </ul>
    </div>
  </div>
</div>
