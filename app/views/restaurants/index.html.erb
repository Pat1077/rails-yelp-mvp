<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Restaurants</h1>
      <ul>
        <% @restaurants.each do |restaurant| %>
          <li>
            <%= restaurant.name %>
            <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
          </li>
        <% end %>
        <li><%= link_to "Add new Restaurant", new_restaurant_path, class: "btn btn-primary"%></li>
      </ul>

    </div>
  </div>
</div>
